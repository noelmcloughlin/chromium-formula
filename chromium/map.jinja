# -*- coding: utf-8 -*-
# vim: ft=jinja

{%- set tplroot = tpldir.split('/')[0] %}
{%- import_yaml tplroot ~ "/defaults.yaml" as default_settings %}
{%- import_yaml tplroot ~ "/osfamilymap.yaml" as osfamilymap %}

{%- set _config = salt['config.get'](tplroot, default={}) %}
{%- set defaults = salt['grains.filter_by'](
      default_settings,
      default=tplroot,
      merge=salt['grains.filter_by']( osfamilymap, grain='os_family',
        merge=salt['grains.filter_by']( _config, default='lookup'
        )
      )
    )
%}
{%- set chromium = salt['grains.filter_by']( {'defaults': defaults}, default='defaults', merge=_config) %}

{%- if chromium.pkg.use_upstream_macapp %}
    {%- set dir = '%s-%s-%s'|format(chromium.pkg.name, chromium.version, chromium.pkg.archive.tag) %}
    {%- do chromium.pkg.macapp.update({'source': chromium.pkg.macapp.uri }) %}
{%- endif %}

{%- if chromium['pkg']['use_upstream_archive'] %}
    {%- set dir = '%s-%s-%s'|format(chromium.pkg.name, chromium.version, chromium.pkg.archive.tag) %}
    {%- do chromium.config.update({'path': chromium.dir.archive + '/' + dir }) %},
    {%- do chromium.pkg.archive.update({'name': chromium.dir.archive + '/' + dir,
           'source': '%s/%s/%s.%s.%s'|format(chromium.pkg.macapp.uri, chromium.version, dir,  grains.osarch, chromium.pkg.suffix)}) %}
{%- endif %}
